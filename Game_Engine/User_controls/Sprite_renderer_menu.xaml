<UserControl x:Class="Game_Engine.User_controls.Sprite_renderer_menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_Engine.User_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="x offset" FontSize="8"/>
        <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding X_offset_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="0" Grid.Column="1" Content="y offset" FontSize="8"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Y_offset_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Content="x Scale" FontSize="8"/>
        <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding X_scale_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Grid.Column="1" Content="y Scale" FontSize="8"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Y_scale_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Rotation" FontSize="8"/>
        <TextBox Grid.Row="5" Grid.Column="0" Text="{Binding Rot_prop, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, 
                        NotifyOnValidationError=True}"/>

        <Button Content="Select Sprite" Click="Sprite_Selection" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" />


    </Grid>
</UserControl>
