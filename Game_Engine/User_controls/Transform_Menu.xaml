<UserControl x:Class="Game_Engine.User_controls.Transform_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game_Engine.User_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="120"
             MinWidth="100">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height ="5*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="x position" FontSize="8"/>
        <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding X_pos_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="0" Grid.Column="1" Content="y position" FontSize="8"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Y_pos_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Content="x Scale" FontSize="8"/>
        <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding X_scale_prop, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2" Grid.Column="1" Content="y Scale" FontSize="8"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Y_scale_prop, UpdateSourceTrigger=PropertyChanged}"/>


    </Grid>
    
</UserControl>
